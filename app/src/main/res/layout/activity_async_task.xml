<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bfa5"
    android:orientation="vertical"
    tools:context="android.lalita.com.idewaayulalitamarmika_1202154355_studycase4.ListNama">

    <TextView
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="List Nama Mahasiswa"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_margin="25dp"
        android:id="@+id/judulList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="mulai"
        android:id="@+id/buttonMulai"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:text="Mulai AsyncTask"
        android:textSize="15sp"
        android:backgroundTint="@android:color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listnama"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
